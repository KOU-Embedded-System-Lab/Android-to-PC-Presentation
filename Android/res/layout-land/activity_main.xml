<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:orientation="horizontal"
    tools:context="android_to_pc_presentation.android.MainActivity" >

	<LinearLayout
	    android:layout_width="50dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:orientation="vertical" >

		<Button
		    android:id="@+id/button_download"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:onClick="button_downloadClicked"
		    android:text="D" />

		<Button
		    android:id="@+id/button_load"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:onClick="button_loadClicked"
		    android:text="L" />

		<Button
		    android:id="@+id/button_redraw"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:onClick="button_redrawClicked"
		    android:text="R" />

        <ImageButton
            android:id="@+id/new_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/new_pic" />

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/save" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp" >
            <ProgressBar
                android:id="@+id/progressBar_sync"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateBehavior="repeat" />
        </FrameLayout>

    </LinearLayout>

	<RelativeLayout
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    >

		<android_to_pc_presentation.android.SlideView
		    android:id="@+id/drawing"
		    android:layout_width="fill_parent"
		    android:layout_centerInParent="true"
		    android:layout_height="0dp"
		    android:layout_marginBottom="3dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_marginTop="3dp"
		    android:background="#FFFFFFFF" />

	</RelativeLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical|center_horizontal"
	    android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

		    <Button
		        android:id="@+id/button_dec"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:onClick="button_dec_clicked"
		        android:text="-" />

		    <Button
		        android:id="@+id/button_inc"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:onClick="button_inc_clicked"
		        android:text="+" />
		</LinearLayout>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		    <LinearLayout
		        android:id="@+id/paint_colors"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF000000"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF000000" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FFFF0000"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FFFF0000" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FFFFCC00"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FFFFCC00" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF009900"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF009900" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF787878"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF787878" />

		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF0000FF"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF0000FF" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF990099"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF990099" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF660000"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF660000" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FF009999"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FF009999" />

		        <ImageButton
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_margin="2dp"
		            android:background="#FFFFFFFF"
		            android:onClick="paintClicked"
		            android:src="@drawable/paint"
		            android:tag="#FFFFFFFF" />

		    </LinearLayout>

		</LinearLayout>

		<ToggleButton
		    android:id="@+id/toggleButton_eraser"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:background="@drawable/eraser" />

		<Button
		    android:id="@+id/button_prevSlide"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:onClick="button_prevSlideClicked"
		    android:text=" &lt; " />

		<Button
		    android:id="@+id/button_nextSlide"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:onClick="button_nextSlideClicked"
		    android:text=" > " />

	</LinearLayout>

</LinearLayout>
